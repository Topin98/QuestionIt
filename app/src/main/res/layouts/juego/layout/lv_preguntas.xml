<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="100dp"  >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/IVLPImagen"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_margin="5dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/TVLPTitulo"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/IVLPImagen"
        android:layout_alignStart="@+id/IVLPImagen"
        android:layout_alignEnd="@+id/TVLPPuntuacion"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="90dp"
        android:maxLines="1"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/TVLPDificultad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/TVLPTitulo"
        android:layout_centerVertical="true"
        android:text="TextView" />

    <ImageView
        android:id="@+id/IVLPPopularidad"
        android:layout_width="25dp"
        android:layout_height="21dp"
        android:layout_alignBottom="@+id/IVLPImagen"
        android:layout_alignStart="@+id/TVLPTitulo"
        android:layout_marginBottom="5dp"
        android:src="@drawable/popularidad" />

    <TextView
        android:id="@+id/TVLPPopularidad"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/IVLPPopularidad"
        android:layout_alignTop="@+id/IVLPPopularidad"
        android:layout_alignStart="@+id/IVLPPopularidad"
        android:layout_marginLeft="30dp"
        android:text="123" />

    <ImageView
        android:id="@+id/IVLPEstado"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/TVLPPuntuacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="80dp"
        android:background="@drawable/textviewstyleazul"
        android:textColor="#FFFFFF"
        android:text="15"
        android:textSize="22dp" />

</RelativeLayout>
