<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/SVD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:animateLayoutChanges="true"
        android:background="@color/primary_light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.dam.ies1.questionit.juego.desafio.PreguntaDesafioActivity">

            <android.support.v7.widget.CardView
                android:id="@+id/CVDTitulo"
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="12dp"
                android:background="@color/primary_light"
                android:visibility="visible"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/IVMostrarTags"
                    android:background="@drawable/rlperfilstyle">

                    <TextView
                        android:id="@+id/TVDTitulo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_margin="15dp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="22dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="30dp">

                <com.dam.ies1.questionit.juego.desafio.DesafioButton
                    android:id="@+id/btnDRespuesta1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="220dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rlperfilstyle"
                    android:gravity="center"
                    android:minHeight="55dp"
                    android:padding="5dp"
                    android:tag="100"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp"
                    android:visibility="invisible" />

                <com.dam.ies1.questionit.juego.desafio.DesafioButton
                    android:id="@+id/btnDRespuesta2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rlperfilstyle"
                    android:gravity="center"
                    android:minHeight="55dp"
                    android:tag="200"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp"
                    android:visibility="invisible" />

                <com.dam.ies1.questionit.juego.desafio.DesafioButton
                    android:id="@+id/btnDRespuesta3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rlperfilstyle"
                    android:gravity="center"
                    android:minHeight="55dp"
                    android:tag="300"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp"
                    android:visibility="invisible" />

                <com.dam.ies1.questionit.juego.desafio.DesafioButton
                    android:id="@+id/btnDRespuesta4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rlperfilstyle"
                    android:gravity="center"
                    android:minHeight="55dp"
                    android:tag="400"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp"
                    android:visibility="invisible" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <TextView
        android:id="@+id/TVDResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="50dp"
        android:background="@android:color/transparent"
        android:visibility="invisible" />

</RelativeLayout>