<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="100dp"  >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/IVPPerfil1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/TVPNombre1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="7dp"
        android:gravity="center"
        android:layout_toStartOf="@+id/TVPPuntos1"
        android:layout_toEndOf="@+id/IVPPerfil1"
        android:maxLines="1"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TVPPuntos1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/TVPDosPuntos"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:text="5"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TVPDosPuntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/dosPuntos" />

    <TextView
        android:id="@+id/TVPPuntos2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/TVPDosPuntos"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:text="5"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TVPNombre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/TVPPuntos2"
        android:layout_toStartOf="@+id/IVPPerfil2"
        android:maxLines="1"
        android:gravity="center"
        android:layout_marginLeft="7dp"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textSize="20sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/IVPPerfil2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        app:srcCompat="@mipmap/ic_launcher" />

</RelativeLayout>
