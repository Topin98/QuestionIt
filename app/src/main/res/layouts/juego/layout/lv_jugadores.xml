<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="100dp"  >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/IVLJImagenPerfil"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/TVLJNombre"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/IVLJImagenPerfil"
        android:layout_alignStart="@+id/IVLJImagenPerfil"
        android:layout_alignEnd="@+id/TVLJPuntuacionTotal"
        android:layout_marginRight="55dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/IVLJPopularidadTotal"
        android:layout_width="25dp"
        android:layout_height="21dp"
        android:layout_alignBottom="@+id/IVLJImagenPerfil"
        android:layout_alignStart="@+id/TVLJNombre"
        android:layout_marginBottom="5dp"
        android:src="@drawable/popularidad" />

    <TextView
        android:id="@+id/TVLJPopularidadTotal"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/IVLJPopularidadTotal"
        android:layout_alignTop="@+id/IVLJPopularidadTotal"
        android:layout_alignStart="@+id/IVLJPopularidadTotal"
        android:layout_marginLeft="30dp"
        android:text="123" />

    <ImageView
        android:id="@+id/TVLJTrofeo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="40dp"
        android:src="@drawable/trofeo"/>

    <TextView
        android:id="@+id/TVLJPuntuacionTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/TVLJTrofeo"
        android:background="@drawable/textviewstyleazul"
        android:text="15"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <ImageView
        android:id="@+id/IVLJVictorias"
        android:layout_width="25dp"
        android:layout_height="21dp"
        android:layout_alignTop="@+id/IVLJPopularidadTotal"
        android:layout_toEndOf="@+id/TVLJPopularidadTotal"
        android:layout_marginLeft="15dp"
        android:src="@drawable/victoria" />

    <TextView
        android:id="@+id/TVLJVictorias"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/IVLJVictorias"
        android:layout_alignTop="@+id/IVLJVictorias"
        android:layout_alignStart="@+id/IVLJVictorias"
        android:layout_marginLeft="33dp"
        android:text="123" />

</RelativeLayout>
