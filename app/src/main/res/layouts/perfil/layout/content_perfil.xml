<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dam.ies1.questionit.perfil.PerfilActivity"
    android:background="@color/primary_light">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/SVIP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="@color/primary_light">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/CVPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/primary">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/IVFotoPerfil"
                            android:layout_marginTop="10dp"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:id="@+id/TVNombrePerfil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="5dp"
                            android:layout_below="@+id/IVFotoPerfil"
                            android:textSize="35dp" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/CVIPPT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_light"
                    android:visibility="visible"
                    android:layout_below="@id/CVPerfil"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:background="@color/grisOscuro">

                        <TextView
                            android:id="@+id/TVIPPT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/puntuacionTotal"
                            android:layout_marginStart="18dp"
                            android:textColor="#FFFFFF"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/TVIPImagenTrofeo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/textviewpuntuacionstyle"
                            android:textColor="#FFFFFF"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/TVIPPuntuacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="94dp"
                            android:textColor="#FFFFFF"
                            android:textSize="25dp" />


                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/CVIPDatos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_below="@+id/CVIPPT"
                    android:layout_margin="15dp"
                    android:background="@color/primary_light"
                    android:visibility="visible"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rlperfilstyle">

                        <TextView
                            android:id="@+id/TVIPPC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"
                            android:text="@string/preguntasContestadas"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/TVIPPregCont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="53dp"
                            android:layout_alignBaseline="@+id/TVIPPC"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="35dp"
                            android:gravity="center"
                            android:background="@drawable/textviewstyleazul"
                            android:textColor="#FFFFFF"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/TVIPCPA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/TVIPPC"
                            android:layout_marginTop="80dp"
                            android:text="@string/PreguntasAcertadas"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/TVIPPregAcertadas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="53dp"
                            android:layout_alignBaseline="@+id/TVIPCPA"
                            android:layout_alignStart="@+id/TVIPPregCont"
                            android:background="@drawable/textviewstyleazul"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/TVIPTA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="140dp"
                            android:layout_alignStart="@+id/TVIPPC"
                            android:layout_marginBottom="22dp"
                            android:text="@string/tasaAcierto"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/TVIPTasaAcierto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="53dp"
                            android:layout_alignBaseline="@+id/TVIPTA"
                            android:layout_alignStart="@+id/TVIPPregCont"
                            android:background="@drawable/textviewstyleazul"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="25dp" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/CVIPDatos2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_below="@+id/CVIPDatos"
                    android:layout_margin="15dp"
                    android:background="@color/primary_light"
                    android:visibility="visible"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rlperfilstyle">

                        <TextView
                            android:id="@+id/TVIPPP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="20dp"
                            android:text="@string/popularidad"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/TVIPPopularidad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/TVIPPP"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="35dp"
                            android:background="@drawable/textviewstyleazul"
                            android:minWidth="53dp"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/TVIPV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/TVIPPP"
                            android:layout_marginTop="80dp"
                            android:text="@string/victorias"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/TVIPVictorias"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/TVIPV"
                            android:layout_alignStart="@+id/TVIPPopularidad"
                            android:background="@drawable/textviewstyleazul"
                            android:minWidth="53dp"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/TVIPRD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="140dp"
                            android:layout_alignStart="@+id/TVIPPP"
                            android:layout_marginBottom="22dp"
                            android:text="@string/recordDesafio"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/TVIPRecordDesafio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="53dp"
                            android:layout_alignBaseline="@+id/TVIPRD"
                            android:layout_alignStart="@+id/TVIPPopularidad"
                            android:background="@drawable/textviewstyleazul"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="25dp" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </ScrollView>

    <ProgressBar
        android:id="@+id/PBIP"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

</RelativeLayout>